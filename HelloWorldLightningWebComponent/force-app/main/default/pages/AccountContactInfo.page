<apex:page standardController="Account" lightningStylesheets="true">
    <apex:pageBlock title="{!Account.Name}'s Contacts">
        <apex:pageBlockTable value="{!Account.Contacts}" var="items">
            <apex:column value="{!item.FirstName}"> </apex:column>
            <apex:column value="{!item.LastName}"> </apex:column>
            <apex:column value="{!item.Email}"> </apex:column>
            <apex:column value="{!item.Phone}"> </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>


